# Production Environment Variables

# API URL - Set this to your production domain (required)
PRODUCTION_API_URL=https://your-production-domain.com

# Server Configuration
PORT=3000
NODE_ENV=production

# Logging Configuration
LOG_LEVEL=info
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
DOWNLOAD_LIMIT_WINDOW_MS=3600000
DOWNLOAD_LIMIT_MAX_REQUESTS=10

# Temporary Directory
TEMP_DIR=/tmp/youtube-downloader 